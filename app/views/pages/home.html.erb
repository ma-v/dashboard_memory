<div class="container">
  <div class="country-filter">
    <h1>Country</h1>
    <div class="filter">
      <%= form_tag root_path, method: :get do %>
        <%= select_tag :country, options_for_select(@countries.unshift("All"), @country) %>
        <%= submit_tag "Filter", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="summary">
    <h1>Summary</h1>
    <div class="summary-cards">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Revenue</h5>
          <h1 class="card-figure">
            <% if @revenue.length < 4 %>
              <%= @revenue.to_i %> €
            <% elsif @revenue.length < 7 %>
              <%= @revenue[0...-2].to_f / 10 %> K €
            <% elsif @revenue.length < 4 %>
              <%= @revenue[0...-2].to_f / 10 %> M €
            <% end %>
          </h1>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Avg Rev / Order</h5>
          <h1 class="card-figure">
            <% if @arpo.length < 4 %>
              <%= @arpo.to_i %> €
            <% elsif @arpo.length < 7 %>
              <%= @arpo[0...-2].to_f / 10 %> K €
            <% elsif @arpo.length < 4 %>
              <%= @arpo[0...-2].to_f / 10 %> M €
            <% end %>
          </h1>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Customers</h5>
          <h1 class="card-figure">
            <% if @customers.length < 4 %>
              <%= @customers.to_i %>
            <% elsif @customers.length < 7 %>
              <%= @customers[0...-2].to_f / 10 %> K
            <% elsif @customers.length < 4 %>
              <%= @customers[0...-2].to_f / 10 %> M
            <% end %>
          </h1>
        </div>
      </div>
    </div>
  </div>
  <div class="monthly">
    <h1>Revenue per Month</h1>
    <% if @country && @country != "All" %>
      <%= column_chart @bundle.joins(:order).group_by_month("orders.order_date", format: "%b").sum(:price) %>
    <% else %>
      <%= column_chart Bundle.joins(:order).group_by_month(:order_date, format: "%b").sum(:price) %>
    <% end %>
  </div>
</div>
